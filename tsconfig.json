{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "incremental": true,
        "outDir": "build",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/*"]
        },
        "sourceMap": true,
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
